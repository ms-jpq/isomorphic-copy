#!/usr/bin/env bash

set -eu
set -o pipefail

####################
# Avoid Slow Shims #
####################


name="$1"

if [[ -x /usr/local/bin/python3 ]]
then
  /usr/local/bin/python3 "$name"
elif [[ -x /usr/bin/python3 ]]
then
  /usr/bin/python3 "$name"
else
  /usr/bin/env -S python3 "$name"
fi

